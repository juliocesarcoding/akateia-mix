generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
  url      = env("DATABASE_URL")
}
enum ServerMode {
  MIX
  RETAKE
  DM
}

model Server {
  id           String     @id @default(cuid())
  name         String
  ip           String
  port         Int
  mode         ServerMode @default(RETAKE)
  region       String?
  isActive     Boolean    @default(true)
  rconPassword String?    // depois a gente move pra secrets/cripto

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([ip, port])
}
